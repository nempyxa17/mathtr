<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--    <style name="Theme.Mathtr" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="Theme.Mathtr" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/major_dark</item>
        <item name="colorPrimaryVariant">@color/major_dark</item>
        <item name="colorOnPrimary">@color/soft_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/major_medium</item>
        <item name="colorSecondaryVariant">@color/major_medium</item>
        <item name="colorOnSecondary">@color/soft_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="listPreferredItemHeightSmall">@dimen/menu_item_size</item>
    </style>

    <style name="Theme.Mathtr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mathtr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mathtr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>